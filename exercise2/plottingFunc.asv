function []=plottingFunc(start,r,z,y,ndisk)
var = y(:,start*ndisk+1:(start+1)*ndisk);
figure
mesh(r,z,var)
% axis([0 LENGTH 0 RADIUSi 0 max(T)])
grid on
xlabel('Radius [m]')
ylabel('Z [m]')
if(start==1)
    zlabel('CH4 mass fraction [-]');
end
if(start==2)
    zlabel('CH4 mass fraction [-]');
end
zlabel('Temperature [K]');